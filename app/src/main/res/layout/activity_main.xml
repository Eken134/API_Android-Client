<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸŸ© Statusbar hÃ¶gst upp (fÃ¤rgas rÃ¶d/grÃ¶n/neutral) -->
        <View
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="12dp"
            android:background="@color/bgDefault" />

        <EditText
            android:id="@+id/editUrl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="API URL"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/editUser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Basic Auth user" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="Basic Auth pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editIntervalSec"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:hint="Interval (sec)"
            android:inputType="number" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:padding="8dp"
            android:text="Start"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:padding="8dp"
            android:text="Stop"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- ðŸŸ« Avskiljare -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textStatus"
            android:text="Status: Av"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textDetails"
            android:text="Ingen aktiv polling Ã¤nnu"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textLastResponse"
            android:text="Senaste svar: â€“"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
